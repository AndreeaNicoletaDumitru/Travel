<!DOCTYPE html>
<html>

<head>
    <title>The World - @ViewBag.Title</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/CSS/Site.css" />
</head>

<body>
    <div id="sidebar">
        <img src="~/Images/MyPicture.jpg" alt="headshot" class="headshot" />
        <span id="userName">Andreea Dumitru</span>
        <ul class="menu">
            <li class="active"><a asp-controllee="App" asp-action="Index">Home</a></li>
            <li><a asp-controllee="App" asp-action="About">About</a></li>
            <li><a asp-controllee="App" asp-action="Contact">Contact</a></li>
        </ul>
    </div>
    <div id="wrapper">
        <div id="main">
            <div>
                <button id="sidebarToggle" class="btn btn-primary">
                    <i class="fa fa-angle-left"></i>
                </button>
            </div>
            @RenderBody()
        </div>
        <div id="footer">
            <p class="text-primary">&copy; 2015 The Travel Ltd.</p>
        </div>
    </div>
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/JS/Site.js"></script>

    @RenderSection("scripts", false)
</body>
</html>
